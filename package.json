{
  "name": "brainstorm-socket-server",
  "version": "0.1.0",
  "private": true,
  "description": "Socket.IO server standalone pour Brainstorm",
  "main": "server.ts",
  "scripts": {
    "dev": "tsx watch server.ts",
    "start": "NODE_ENV=production tsx server.ts",
    "build": "prisma generate",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate dev --name updates",
    "db:generate": "prisma generate",
    "db:reset": "prisma migrate reset --force",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "prisma": "^6.19.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/node": "^20",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
